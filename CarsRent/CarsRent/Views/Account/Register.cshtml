@model CarsRent.Models.RegisterViewModel
@{
    ViewBag.Title = "注册";
}

<div class="page-container">
    @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        <h3 class="col-lg-offset-3">创建新帐户</h3>
        @Html.ValidationSummary("", new { @class = "text-danger" })
        <div class="form-group">
            <div class="col-md-4 col-sm-4" style="margin-top:25px;">
                @Html.LabelFor(m => m.LoginName, new { @class = "control-label" })
            </div>
            <div class="col-md-8 col-sm-8">
                @Html.TextBoxFor(m => m.LoginName, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-4 col-sm-4" style="margin-top:25px;">
                @Html.LabelFor(m => m.Password, new { @class = "control-label" })
            </div>
            <div class="col-md-8 col-sm-8">
                @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-4 col-sm-4" style="margin-top:25px;">
                @Html.LabelFor(m => m.ConfirmPassword, new { @class = "control-label" })
            </div>
            <div class="col-md-8 col-sm-8">
                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" class="btn btn-default" value="注册" />
            </div>
        </div>
    }
    </div>

<ul id="supersized" class="speed" style="visibility: visible"></ul>
<style>
    .control-label{
        font-size:16px;
    }
    img{
        filter:alpha(opacity=50);
        opacity:0.5;
    }
</style>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <link href="~/Content/assets/css/style.css" rel="stylesheet" />
    <link href="~/Content/assets/css/supersized.css" rel="stylesheet" />
    <script src="~/Scripts/assets/js/supersized-init.js"></script>
    <script src="~/Scripts/assets/js/supersized.3.2.7.min.js"></script>
}