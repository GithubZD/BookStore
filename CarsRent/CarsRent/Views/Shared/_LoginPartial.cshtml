@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
    @Html.AntiForgeryToken()
            <div id="cssmenu">
                <ul>
                    <li><a href="/User/Index">@{Html.RenderAction("GetUserIcon", "User");}</a></li>
                    <li>
                        @Html.ActionLink("你好，" + User.Identity.GetUserName() + "!", "Index", "User", routeValues: null, htmlAttributes: new { title = "Manage" })
                    </li>
                    <li><a href="javascript:document.getElementById('logoutForm').submit()">注销</a></li>
                </ul>
            </div>
    }
}
else
{
        <div id="cssmenu">
            <ul>
                <li><a href="/Account/Login"><img src="~/Images/IconImg/common.png" style="width:80px;height:80px;border-radius:80px;" /></a></li>
                <li>@Html.ActionLink("注册", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
                <li>@Html.ActionLink("登录", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
            </ul>
        </div>
}
