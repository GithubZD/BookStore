@model IEnumerable<CarsRent.Models.OrderDetail>

@{
    ViewBag.Title = "Index";

}
<div class="body-content" style="margin-top:20px">
    <div class="header-a" style="margin-left:-20px">
        <header>
            <ul class="nav nav-pills" style="background-color:lightgrey">
                <li class="active"><a id="allOrder">全部订单</a></li>&nbsp;
                <li><a class="checkByPay" data-pay="0">待付款</a></li>&nbsp;
                <li><a class="checkByPay" data-pay="1">已付款</a></li>&nbsp;
                <li><a class="checkByStatus" date-status="1">正在用车</a></li>&nbsp;
                <li><a class="checkByStatus" date-status="2">已完成</a></li>&nbsp;
                <li><a class="checkByPay" data-pay="2">已取消</a></li>&nbsp;
                <li><a class="checkByEvaluate" date-evaluate="0">待评价</a></li>
            </ul>
        </header>

    </div>
    <div>
        <br />
    </div>
    <div class="row" id="orderList">
        @{Html.RenderAction("AllOrder","RentOrders");}
    </div>
</div>

<style>
    .col_name{
        text-align:center;
    }
</style>
@section Scripts {
@Scripts.Render("~/bundles/jqueryval")
<link rel="stylesheet" href="~/Content/MyStyle.css" />
<link href="~/Content/bootstrap.css" type="text/css" rel="stylesheet" />
<script src="~/Scripts/bootbox.js" type="text/javascript"></script>
<script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
<script src="~/Scripts/dealOrder.js" type="text/javascript"></script>
<script type="text/javascript">

    $(document).ready(function () {
        $('ul.nav').delegate("li", "click", function () {
            $("li").removeClass('active');
            $(this).addClass('active');
        });
    });


</script>
}